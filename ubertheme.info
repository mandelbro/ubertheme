name = UberTheme
description = An Ã¼ber powered HTML5 Boilerplate based theme for Drupal
package = Core
version = VERSION
core = 7.x

; add boilerplate stylesheets
stylesheets[screen][] = css/normalize.css
stylesheets[screen][] = css/main.css
; add drupal stylesheets
stylesheets[print][] = css/print.css
stylesheets[screen][] = css/style.css

; add boilerplate javascript
scripts[] = js/modernizr.js
scripts[] = js/main.js
scripts[] = js/plugins.js

; define regions
regions[content] = Content
regions[content_top] = Content Top
regions[content_bottom] = Content Bottom
regions[help] = Help
regions[header] = Page header
regions[header_menu] = Header navigation menu
regions[footer] = Footer
regions[sidebar_first] = Left sidebar
regions[sidebar_second] = Right sidebar

settings[shortcut_module_link] = 1

; define configurable features
features[] = logo
features[] = footer_logo
features[] = footer_location_1
features[] = footer_location_2
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = favicon
features[] = main_menu
features[] = secondary_menu